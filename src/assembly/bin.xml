<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
	<id>package</id>
	<formats>
		<format>zip</format>
	</formats>
	<dependencySets>
		<!-- Lib directory for JDk8 -->
		<dependencySet>
			<outputDirectory>lib</outputDirectory>
			<scope>runtime</scope>
			<outputFileNameMapping>${artifact.artifactId}${dashClassifier?}.${artifact.extension}</outputFileNameMapping>
			<includes>
				<include>org.jeyzer:jeyzer-demo</include>
			</includes>
		</dependencySet>
		<dependencySet>
			<outputDirectory>lib</outputDirectory>
			<scope>runtime</scope>
			<excludes>
				<exclude>org.jeyzer:jeyzer-demo</exclude>
				<exclude>org.jeyzer:jeyzer-annotations</exclude>
				<exclude>org.jeyzer:jeyzer-annotation-processors</exclude>
				<exclude>org.jeyzer:jeyzer-demo-dup1</exclude>
				<exclude>org.jeyzer:jeyzer-demo-dup2</exclude>
				<exclude>org.jeyzer:jeyzer-demo-dup3</exclude>
			</excludes>
		</dependencySet>
		<!-- Mods directory for JDk9+ -->
		<dependencySet>
			<outputDirectory>mods</outputDirectory>
			<scope>runtime</scope>
			<outputFileNameMapping>${artifact.artifactId}${dashClassifier?}.${artifact.extension}</outputFileNameMapping>
			<includes>
				<include>org.jeyzer:jeyzer-demo</include>
			</includes>
		</dependencySet>
		<dependencySet>
			<outputDirectory>mods</outputDirectory>
			<scope>runtime</scope>
			<excludes>
				<exclude>org.jeyzer:jeyzer-demo</exclude>
				<exclude>org.jeyzer:jeyzer-annotations</exclude>
				<exclude>org.jeyzer:jeyzer-annotation-processors</exclude>
				<exclude>org.jeyzer:jeyzer-demo-dup1</exclude>
				<exclude>org.jeyzer:jeyzer-demo-dup2</exclude>
				<exclude>org.jeyzer:jeyzer-demo-dup3</exclude>
			</excludes>
		</dependencySet>
	</dependencySets> 
	<fileSets>
		<fileSet>
			<directory>src/main/scripts</directory>
			<filtered>true</filtered>
			<includes>
				<include>bin/*.bat</include>
				<include>bin/*.sh</include>
			</includes>
			<fileMode>774</fileMode>
			<outputDirectory>/</outputDirectory>
		</fileSet>
		<fileSet>
			<!-- virtual threads -->
			<directory>vt21</directory>
			<filtered>false</filtered>
			<includes>
				<include>*.bat</include>
				<include>*.sh</include>
			</includes>
			<fileMode>774</fileMode>
			<outputDirectory>/virtual-threads</outputDirectory>
		</fileSet>
		<fileSet>
			<!-- virtual threads -->
			<directory>vt21</directory>
			<filtered>false</filtered>
			<includes>
				<include>**/*.java</include>
				<include>src/license/**/*.properties</include>
				<include>src/license/**/*.txt</include>
				<include>pom.xml</include>
				<include>README.md</include>
			</includes>
			<fileMode>444</fileMode>
			<outputDirectory>/virtual-threads</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>src/main/config/record</directory>
			<filtered>false</filtered>
			<excludes>
				<exclude>**/*.installer.properties</exclude>
			</excludes>
			<fileMode>774</fileMode>
			<outputDirectory>/config/record</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>src/main/config/jfr</directory>
			<filtered>false</filtered>
			<fileMode>774</fileMode>
			<outputDirectory>/config/jfr</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>src/main/java</directory>
			<filtered>false</filtered>
			<includes>
				<include>**/*.java</include>
			</includes>
			<fileMode>444</fileMode>
			<outputDirectory>/src</outputDirectory>
		</fileSet>
		<fileSet>
			<!-- virtual threads -->
			<directory>vt21/src/main/java</directory>
			<filtered>false</filtered>
			<includes>
				<include>**/*.java</include>
			</includes>
			<fileMode>444</fileMode>
			<outputDirectory>/src</outputDirectory>
		</fileSet>
		<fileSet>
			<!-- duplicate libraries -->
			<directory>lib</directory>
			<filtered>false</filtered>
			<includes>
				<include>*.jar</include>
			</includes>
			<excludes>
				<exclude>jeyzer-demo-dup-3.3.3.jar</exclude>
			</excludes>
			<outputDirectory>lib</outputDirectory>
		</fileSet>
		<fileSet>
			<!-- duplicate libraries -->
			<directory>lib</directory>
			<filtered>false</filtered>
			<includes>
				<include>*.jar</include>
			</includes>
			<excludes>
				<exclude>jeyzer-demo-dup-3.3.3.jar</exclude>
				<exclude>jeyzer-demo-virtual-threads.jar</exclude>
			</excludes>
			<outputDirectory>mods</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>${project.build.directory}/site/apidocs</directory>
			<outputDirectory>apidocs</outputDirectory>
		</fileSet>
	</fileSets>
	<files>
		<file>
			<filtered>true</filtered>
			<source>${basedir}/src/main/doc/README.txt</source>
			<outputDirectory>/</outputDirectory>
		</file>	
		<file>
			<source>${basedir}/src/main/config/log/logback.xml</source>
			<outputDirectory>config/log</outputDirectory>
		</file>
		<file>
			<source>${basedir}/LICENSE.txt</source>
			<outputDirectory>/licenses</outputDirectory>
		</file>
		<file>
			<source>${basedir}/THIRD-PARTY.txt</source>
			<outputDirectory>/licenses</outputDirectory>
		</file>
	</files>
</assembly>